<div class="answers-container">
  <div class="option-header">
    <h2>Please rate your <%= @career_options.first == @career_option ? "first" : "second" %> career option as a
      <span class="pink"> <%= @career_option.option %></span>
    </h2>
  </div>
  <div class="answers-form">
    <%= form_tag url_for(action: 'create'), method: "post" do %>
      <% Question.all.each do |question| %>
        <div class= "answers-individual">
          <div class="response-field-question-answers"><%= label_tag question.question %></div>
          <div class="response-field-answer">
            <div class="button-label-combo">
              <%= radio_button_tag question.question, "1" %>
              <%= label_tag "#{question.question}_1", "Poor" %>
            </div>
            <div class="button-label-combo">
              <%= radio_button_tag question.question, "2" %>
              <%= label_tag "#{question.question}_2", "Okay" %>
            </div>
            <div class="button-label-combo">
              <%= radio_button_tag question.question, "3" %>
              <%= label_tag "#{question.question}_3", "Good" %>
            </div>
            <div class="button-label-combo">
              <%= radio_button_tag question.question, "4" %>
              <%= label_tag "#{question.question}_4", "Very good" %>
            </div>
            <div class="button-label-combo">
              <%= radio_button_tag question.question, "5" %>
              <%= label_tag "#{question.question}_5", "Excellent" %>
            </div>
          </div>
        </div>
      <% end %>
      <%= submit_tag "Next", class: "hero-btn align-self-center" %>
    <% end %>
  </div>
</div>
